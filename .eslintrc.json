{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "rules": {
    "prefer-const": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "react/self-closing-comp": "error",
    "react/jsx-boolean-value": ["error", "never"],
    "react/no-unescaped-entities": "off"
  }
}

